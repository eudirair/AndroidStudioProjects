<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:visibility="visible"
    tools:context=".PrincipalCalculadora"
    tools:layout_editor_absoluteY="25dp">

    <LinearLayout
        android:layout_width="377dp"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="310dp"
            android:layout_weight="1"
            android:gravity="top|clip_horizontal"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="match_parent"
                    android:layout_height="62.5dp"
                    android:layout_weight="1"
                    android:textAlignment="gravity"
                    android:padding="16dp"
                    android:textColor="#42124C"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_height="62.5dp"
                    android:layout_weight="1"
                    android:textColor="#42124C"
                    android:textAlignment="gravity"
                    android:padding="16dp"
                    android:textSize="24sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textOperacao"
                    android:layout_width="100dp"
                    android:layout_height="44dp"
                    android:layout_weight="3"
                    android:padding="24dp"
                    android:textAlignment="center"
                    android:textColor="#42124C"
                    android:textSize="30dp" />

                <TextView
                    android:id="@+id/textResult"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_weight="3"
                    android:padding="16dp"
                    android:textAlignment="gravity"
                    android:textColor="#B51630"
                    android:textSize="30sp" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="bottom|clip_horizontal"
                android:orientation="vertical"
                android:visibility="visible">

                <Button
                    android:id="@+id/button7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#333745"
                    android:onClick="Button_7"
                    android:text="7"
                    android:textColor="#fff" />

                <Button
                    android:id="@+id/button4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#333745"
                    android:onClick="Button_4"
                    android:text="4"
                    android:textColor="#fff" />

                <Button
                    android:id="@+id/button1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#333745"
                    android:onClick="Button_1"
                    android:text="1"
                    android:textColor="#fff" />

                <Button
                    android:id="@+id/buttonPonto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#333745"
                    android:onClick="Button_Ponto"
                    android:text="."
                    android:textColor="#fff" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="bottom|right|clip_vertical"
                android:orientation="vertical"
                android:visibility="visible">

                <Button
                    android:id="@+id/button8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#333745"
                    android:onClick="Button_8"
                    android:text="8"
                    android:textColor="#fff"
                    android:visibility="visible" />

                <Button
                    android:id="@+id/button5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#333745"
                    android:onClick="Button_5"
                    android:text="5"
                    android:textColor="#fff" />

                <Button
                    android:id="@+id/button2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#333745"
                    android:onClick="Button_2"
                    android:text="2"
                    android:textColor="#fff" />

                <Button
                    android:id="@+id/button0"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#333745"
                    android:onClick="Button_0"
                    android:text="0"
                    android:textColor="#fff" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="bottom|right|clip_vertical"
                android:orientation="vertical"
                android:visibility="visible">

                <Button
                    android:id="@+id/button9"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#333745"
                    android:onClick="Button_9"
                    android:text="9"
                    android:textColor="#fff"
                    android:visibility="visible" />

                <Button
                    android:id="@+id/button6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#333745"
                    android:onClick="Button_6"
                    android:text="6"
                    android:textColor="#fff" />

                <Button
                    android:id="@+id/button3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#333745"
                    android:onClick="Button_3"
                    android:text="3"
                    android:textColor="#fff" />

                <Button
                    android:id="@+id/buttonIgual"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#333745"
                    android:onClick="Button_Igual"
                    android:text="="
                    android:textColor="#fff" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="115dp"
                android:layout_height="match_parent"
                android:gravity="bottom|right|clip_vertical"
                android:orientation="vertical"
                android:visibility="visible">

                <Button
                    android:id="@+id/buttonBack"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#30706f"
                    android:onClick="Button_Back"
                    android:text="X"
                    android:textColor="#B51630"
                    android:textSize="24sp"
                    android:visibility="visible" />

                <Button
                    android:id="@+id/buttonDel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#30706f"
                    android:onClick="Button_Del"
                    android:text="DEL"
                    android:textColor="#B51630"
                    android:textSize="18sp"
                    android:visibility="visible" />

                <Button
                    android:id="@+id/buttonSoma"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#30706f"
                    android:onClick="Button_Soma"
                    android:text="+"
                    android:textColor="#42124C"
                    android:textSize="24sp" />

                <Button
                    android:id="@+id/buttonSubt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#30706f"
                    android:onClick="Button_Subt"
                    android:text="-"
                    android:textColor="#42124C"
                    android:textSize="35sp" />

                <Button
                    android:id="@+id/buttonMult"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#30706f"
                    android:onClick="Button_Mult"
                    android:text="*"
                    android:textColor="#42124C"
                    android:textSize="24sp" />

                <Button
                    android:id="@+id/buttonDiv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#30706f"
                    android:onClick="Button_Div"
                    android:text="/"
                    android:textColor="#42124C"
                    android:textSize="24sp" />

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>